{
  "name": "neko-memory-system",
  "version": "1.0.0",
  "description": "Persistent memory and context management system for Claude AI implementing Anthropic's memory tool and context editing features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "demo": "ts-node demo/live-demonstration.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "validate": "tsc --noEmit && npm run lint"
  },
  "keywords": [
    "claude",
    "anthropic",
    "memory",
    "context-editing",
    "ai",
    "persistent-memory",
    "mongodb",
    "typescript"
  ],
  "author": "Neko Memory System Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YourUsername/neko-memory-system.git"
  },
  "bugs": {
    "url": "https://github.com/YourUsername/neko-memory-system/issues"
  },
  "homepage": "https://github.com/YourUsername/neko-memory-system#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
