# ===============================================
# NEKO MEMORY SYSTEM - ENVIRONMENT VARIABLES
# ===============================================
# IMPORTANT: This is a TEMPLATE file only!
# Copy this file to .env and fill in your actual values.
# NEVER commit the real .env file to version control!

# ===== MONGODB CONFIGURATION =====
# Your MongoDB Atlas connection string
# Example: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=your_mongodb_connection_string_here

# ===== MEMORY SYSTEM CONFIGURATION =====
# Backend type: file | mongodb | hybrid
MEMORY_BACKEND=file

# Memory storage root directory (absolute path)
MEMORY_ROOT=/path/to/your/.claude/memories

# ===== CONTEXT EDITING CONFIGURATION =====
# Enable context editing features
CONTEXT_EDITING_ENABLED=true

# Context usage threshold (0.0 to 1.0)
# Start clearing stale tools at this percentage
CONTEXT_THRESHOLD=0.8

# Minimum number of tools to retain
MIN_RETAINED_TOOLS=5

# ===== API CONFIGURATION =====
# Anthropic API key (for Claude API)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Beta header for context management
# Current version: context-management-2025-06-27
BETA_HEADER=context-management-2025-06-27

# ===== APPLICATION SETTINGS =====
# Node environment
NODE_ENV=development

# Server port
PORT=3000

# Log level: debug | info | warn | error
LOG_LEVEL=info

# ===== SECURITY SETTINGS =====
# Enable memory encryption (recommended for production)
MEMORY_ENCRYPTION_ENABLED=false

# Encryption key (generate with: openssl rand -hex 32)
MEMORY_ENCRYPTION_KEY=your_encryption_key_here

# ===== PERSONALITY CONFIGURATION =====
# Enable per-personality memory segregation
PERSONALITY_ISOLATION=true

# Default personality for memory operations
DEFAULT_PERSONALITY=neko

# ===== AUTO-SAVE CONFIGURATION =====
# Enable auto-save on context threshold
AUTO_SAVE_ENABLED=true

# Topics to auto-save (comma-separated)
AUTO_SAVE_TOPICS=architectural decisions,debugging insights,performance optimizations

# ===== MONGODB COLLECTIONS =====
# Database name for memory system
MEMORY_DATABASE_NAME=neko-memory-system

# Collection names (optional, will use defaults if not specified)
MEMORY_FILES_COLLECTION=memory_files
MEMORY_ACCESS_LOG_COLLECTION=memory_access_log
ARCHITECTURAL_DECISIONS_COLLECTION=architectural_decisions
